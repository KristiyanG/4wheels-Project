package controlers;

import java.beans.Statement;
import java.io.IOException;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import busynesLogic.containers.UserContainer;
import busynesLogic.models.User;

/**
 * Servlet implementation class LoginServlet
 */
@WebServlet("/LoginServlet")
public class LoginServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public LoginServlet() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		response.getWriter().append("Served at: ").append(request.getContextPath());
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
//		doGet(request, response);
		
		String email = request.getParameter("Email");
		String password = request.getParameter("Password");
		try {
			Class.forName("com.mysql.jdbc.Driver");
		} catch (ClassNotFoundException e) {
			System.out.println("Can not connect to base");
		}
		Connection con=null;
		try {
			 con = DriverManager.

					getConnection("jdbc:mysql://localhost:3306/MyDatabase", "root", "123456");
		} catch (SQLException e) {
			System.out.println("Can not get connection");
		}
		Connection dbCon;
		Statement stmt ;
		ResultSet rs ;
		try {
			dbCon = DriverManager.getConnection("jdbc:mysql://localhost:3306/MyDatabase", "root", "123456");
			 stmt = (Statement) dbCon.createStatement();
			 rs = ((java.sql.Statement) stmt).executeQuery("SELECT name FROM user");
			 while (rs.next()) {
				 String name = rs.getString("name");
				 
				 System.out.println(name );
				}
		} catch (SQLException e) {
			System.out.println("Error result");
		}
	
				
		
				
		User user = UserContainer.getUsers(email, password);
		
		
		if(user != null){
			System.out.println(user);
		}
		
		response.getWriter().append("Wellcome " + user.getName()+"!");
	}

}
